<phpunit bootstrap="tests/bootstrap.php"
		 colors="true"
		 stopOnFailure="false"
		 syntaxCheck="false"
>
	<testsuitest>
		<testsuite name="Framework Tests">
			<directory>tests/</directory>
		</testsuite>
	</testsuitest>

	<php>
        <const name="PHPUNIT_DBHOST" value="localhost" />
        <const name="PHPUNIT_DBUSER" value="root" />
        <const name="PHPUNIT_DBPASS" value="" />
        <const name="PHPUNIT_DBNAME" value="lightFramework_test" />
    </php>

	<selenium>
	  	<browser host="localhost"
	  	 		 port="4444"
	        	 timeout="30000"/>
	</selenium>

</phpunit>